{
  "name": "@aussiegeek/set-shared-config",
  "version": "0.0.1",
  "repository": "github:aussiegeek/set-shared-config",
  "license": "MIT",
  "bin": {
    "set-shared-config": "dist/bin/set-shared-config.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "ci": "yarn prettier:check && yarn lint:check && yarn types:check && yarn test",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --fix .",
    "test": "jest",
    "types:check": "tsc --noEmit",
    "watch": "rollup -c --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,yml,yaml,css,md}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "latest-version": "5.1.0",
    "merge-anything": "4.0.0",
    "prettier": "2.2.1"
  },
  "devDependencies": {
    "@aussiegeek/eslint-config-base": "0.2.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/node": "14.14.45",
    "@types/prettier": "2.2.3",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "7.25.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jest-formatting": "2.0.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "4.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rollup": "2.47.0",
    "rollup-plugin-typescript2": "0.30.0",
    "sort-package-json": "1.50.0",
    "ts-jest": "26.5.2",
    "ts-node": "9.1.1",
    "tslib": "2.2.0",
    "typescript": "4.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
